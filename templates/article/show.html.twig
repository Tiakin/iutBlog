{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.contenu }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ article.dateCreation ? article.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateModification</th>
                <td>{{ article.dateModification ? article.dateModification|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cat√©gories</th>
                <td>
                    <ul>
                        {% for categorie in article.categories %}
                            <li>{{ categorie.nom }}</li>
                        {% else %}
                            <li>Pas de categories</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>
                    <ul>
                        {% for com in article.commentaires %}
                            <li>{{ com.nom }}</li>
                        {% else %}
                            <li>Pas de commentaires</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            <tr>
                <th>Ajouter un commentaire</th>
                <td colspan="2">
                    {{ include('commentaire/_form.html.twig'), {'form': formAddCommentaire} }}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
